{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "lib": [
            "ES2023",
            "DOM"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}